#!/bin/sh /etc/rc.common
# QoS动态带宽调整服务

START=99
STOP=10

USE_PROCD=1
PROG=/usr/local/bin/qos_dba

start_service() {
    procd_open_instance
    procd_set_param command "$PROG" -v
    procd_set_param respawn
    procd_set_param stdout 1
    procd_set_param stderr 1
    procd_close_instance
}

stop_service() {
    killall qos_dba 2>/dev/null
}